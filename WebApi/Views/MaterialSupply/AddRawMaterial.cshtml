@model MaterialSupplyManagement.RawMaterial

<form method="post" asp-action="AddRawMaterial">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerKg" class="control-label">Price per kg</label>
        <input asp-for="PricePerKg" class="form-control" />
        <span asp-validation-for="PricePerKg" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WeightTons" class="control-label">Weight in tons</label>
        <input asp-for="WeightTons" class="form-control" />
        <span asp-validation-for="WeightTons" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Add Raw Material</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}